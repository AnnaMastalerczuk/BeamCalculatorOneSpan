<Window x:Class="BeamCalculatorOneSpanApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeamCalculatorOneSpanApp"
        xmlns:views="clr-namespace:BeamCalculatorOneSpanApp.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" TextAlignment="Center" FontSize="40"  Text="Kalkulator belek prostych"></TextBox>
        <TextBox Grid.Row="2" TextAlignment="Center" Text="Elementy z asortymentu deskowań systemowych"></TextBox>
        <Grid Grid.Row="3">
            <views:ElementView/>
        </Grid>
    </Grid>
</Window>
